/* pages/feedback/feedback.wxss */
page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fd_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fd_tips text {
  margin: 20rpx 10rpx;
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
}
.fb_main .fd_content {
  background-color: #fff;
}
.fb_main .fd_content textarea {
  padding: 10px;
}
.fb_main .fd_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.fb_main .fd_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 40rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  color: #ccc;
}
.fb_main .fd_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .form_btm_wrap {
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btm_wrap button {
  width: 60%;
}
